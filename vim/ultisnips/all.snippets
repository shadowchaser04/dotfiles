# ruby snippet put the whole bang line
snippet bang
#!/usr/bin/env ruby
require File.expand_path('../../config/environment', __FILE__)
require 'pry'
require 'json'
endsnippet

#------------------------------------------------------------------------------
# curly braces
#------------------------------------------------------------------------------
snippet { "{} curly braces"
{${1}} ${2}
endsnippet

snippet "(\S+)\{" "curly braces after the word" r
`!p snip.rv=match.group(1)`{${1}} ${2}
endsnippet

#------------------------------------------------------------------------------
# braces
#------------------------------------------------------------------------------
snippet ( "() braces"
(${1}) ${2}
endsnippet

snippet "(\S+)\(" "braces after word" r
`!p snip.rv=match.group(1)`(${1}) ${2}
endsnippet

#------------------------------------------------------------------------------
# brackets
#------------------------------------------------------------------------------
snippet [ "[ brackets"
[${1}] ${2}
endsnippet

snippet "(\S+)\[" "brackets after the word" r
`!p snip.rv=match.group(1)`[${1}] ${2}
endsnippet

